# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Python files
*.py text eol=lf
*.pyi text eol=lf
*.pyx text eol=lf

# Configuration files
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.lock text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pyc binary
*.pyd binary
*.so binary
*.dylib binary
*.dll binary
*.exe binary
